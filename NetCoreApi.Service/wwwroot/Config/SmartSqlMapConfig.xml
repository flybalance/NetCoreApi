    <!-- 嵌入式资源 -->
    <!--<SmartSqlMap Path="SmartSqlSampleChapterOne.Maps.T_Article.xml, SmartSqlSampleChapterOne" Type="Embedded"></SmartSqlMap>-->

    <!-- http资源 -->
    <!--<SmartSqlMap Type="Uri" Path="https://smartsql.net/Maps/T_Article.xml" />-->
  </SmartSqlMaps>
  <!-- 数据Map配置 End -->
</SmartSqlMapConfig>